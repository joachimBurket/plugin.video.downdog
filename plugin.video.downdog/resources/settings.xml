        <setting id="video_quality" type="labelenum" label="Video Quality" values="Auto|HD|High|Standard|Low" default="Auto"/>
        <setting id="audio_balance" type="slider" label="Music/Voice balance (only music = 0)" range="0, 0.1, 1" default="0.5" option="float"/>
